<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Ellipsis | Coupons</title>

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- Toastr style -->
    <link href="/assets/css/plugins/toastr/toastr.min.css" rel="stylesheet">
    <link href="/assets/css/plugins/dataTables/datatables.min.css" rel="stylesheet">

    <link href="/assets/css/plugins/select2/select2.min.css" rel="stylesheet">
    <link href="/assets/css/plugins/select2/select2-bootstrap4.min.css" rel="stylesheet">

    <link href="/assets/css/plugins/switchery/switchery.css" rel="stylesheet">

    <link href="/assets/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="/assets/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">

    <link href="/assets/css/animate.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">


    <link href="/assets/css/plugins/datapicker/datepicker3.css" rel="stylesheet">

    <link href="/assets/css/admin/discounts.css" rel="stylesheet">
    <!-- Sweet Alert -->
    <link href="/assets/css/plugins/sweetalert/sweetalert.css" rel="stylesheet">



</head>

<body class="pace-done skin-1">

    <div id="wrapper">
        <%- include('../navbar',{page:'coupons'}); %>
            <div id="page-wrapper" class="gray-bg">
                <%- include('../headerbar'); %>
                    <%- include('../breadcrumb',{page:'Coupons', items:['Admin', 'Subscriptions','Coupons']}); %>

                        <div class="wrapper wrapper-content  animated fadeInRight">
                            <div class="row">
                                <div class="col-sm-8">
                                    <div class="ibox">
                                        <div class="ibox-content">
                                            <span class="text-muted small float-right"><a id="" href="?action=addCoupon"
                                        class="btn btn-primary btn-circle client-link btn-add-discount"> <i
                                            class="fa fa-plus"></i></a></span>
                                            <h2>Coupons</h2>



                                            <div class="clients-list">
                                                <span class="float-right small text-muted">
                                    </span>

                                                <div class="full-height-scroll">
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                                            <thead>
                                                                <tr>
                                                                    <th>Code</th>
                                                                    <th>Type</th>
                                                                    <th>Price</th>
                                                                    <th>User</th>
                                                                    <th>Product</th>
                                                                    <th>Max. of use</th>
                                                                    <th>Used</th>
                                                                    <th>Starts</th>
                                                                    <th>Ends</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% if (data && data.discounts && data.discounts.length) { %>
                                                                    <% for(var i=0; i < data.discounts.length; i++) {%>
                                                                        <tr>

                                                                            <td>
                                                                                <a href="?action=showCoupon&discountId=<%= data.discounts[i]._id %>" class="client-link">
                                                                                    <%= data.discounts[i].code %>
                                                                                </a>
                                                                            </td>
                                                                            <td>
                                                                                <% if (data.discounts[i].type == 'fixed') { %>
                                                                                    $
                                                                                    <% } else {%>
                                                                                        %
                                                                                        <% } %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.discounts[i].price %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.discounts[i].userName %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.discounts[i].productName %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.discounts[i].maxUse %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.discounts[i].nbrUse %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.discounts[i].sstartTime %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.discounts[i].sdeadline %>
                                                                            </td>
                                                                        </tr>
                                                                        <% } %>
                                                                            <% } %>

                                                            </tbody>

                                                        </table>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="ibox selected">

                                        <div class="ibox-content">
                                            <div class="tab-content">
                                                <% if (data && data.action && data.action == 'addCoupon') { %>
                                                    <div id="addUser" class="tab-pane active">
                                                        <form role="form" id="form">
                                                            <div class="row m-b-lg">

                                                                <div class="col-sm-12 text-center">
                                                                    <h2>Add Coupon</h2>
                                                                </div>

                                                            </div>
                                                            <div class="client-detail">
                                                                <div class="">

                                                                    <div id="error">

                                                                    </div>

                                                                    <div class="form-group  row">
                                                                        <div class="col-md-6 col-sm-12"><label class="col-sm-12 row col-form-label">Code</label><input name="code" id="code" type="text" class="form-control" placeholder="Code" required></div>
                                                                        <div class="col-md-6 col-sm-12">
                                                                            <label class="col-sm-12 row col-form-label">Type</label>
                                                                            <select id="type" class="form-control" name="type" required>
                                                                                <option value="" selected disabled>Select type</option>
                                                                                <option value="fixed">Fixed</option>
                                                                                <option value="percent">Percent</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>

                                                                    <div class="form-group  row">
                                                                        <div class="col-sm-12">
                                                                            <label class="col-sm-12 row col-form-label">Price</label><input type="number" name="price" id="price" class="form-control" placeholder="Price" required></div>
                                                                    </div>

                                                                    <div class="form-group  row">
                                                                        <div class="col-sm-12">
                                                                            <label class="col-sm-12 row col-form-label">User</label>
                                                                            <select id="user" class="form-control" name="user">
                                                                                <option value="" selected disabled>Select user</option>
                                                                                <% if (data && data.users && data.users.length) { %>
                                                                                    <% for(var i=0; i < data.users.length; i++) {%>
                                                                                        <option value="<%= data.users[i]._id %>">
                                                                                            <% if (data && data.users && data.users[i].profile && data.users[i].profile.name) { %>
                                                                                                <%= data.users[i].profile.name %>
                                                                                            <% } else { %>
                                                                                                <%= data.users[i].username %>
                                                                                            <% } %>
                                                                                        </option>
                                                                                    <% } %>
                                                                                <% } %>
                                                                            </select>
                                                                        </div>
                                                                    </div>


                                                                    <div class="form-group  row">
                                                                        <div class="col-sm-12">
                                                                            <label class="col-sm-12 row col-form-label">Product</label>
                                                                            <select id="product" class="form-control" name="product">
                                                                                <option value="" selected disabled>Select product</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>

                                                                    <div class="form-group  row">

                                                                        <div class="col-sm-12"><label class="col-sm-12 row col-form-label">Max. of use</label><input type="number" id="maxUse" name="maxUse" max="999" class="form-control" min="1" placeholder="Max. of use" required></div>
                                                                    </div>

                                                                    <div class="form-group">
                                                                        <label class="font-normal">Starts</label>
                                                                        <div class="input-group date">
                                                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="startTime" data-mask="99/99/9999" type="text" class="form-control">
                                                                        </div>
                                                                    </div>

                                                                    <div class="form-group">
                                                                        <label class="font-normal">Ends</label>
                                                                        <div class="input-group date">
                                                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="deadline" data-mask="99/99/9999" type="text" class="form-control">
                                                                        </div>
                                                                    </div>

                                                                    <div class="form-group  row">
                                                                        <div class="col-md-6 col-sm-12"><button type="submit" id="saveCoupon" class="btn btn-block btn-primary">Save</button></div>
                                                                        <div class="col-md-6 col-sm-12"><a href="/admin/coupons" id="cancelCoupon" class="btn btn-block btn-outline btn-danger">Cancel</a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <% } %>

                                                        <% if (data && data.action && data.action == 'showCoupon' && data.discountId  && data.discount) { %>
                                                            <div id="showUser" class="tab-pane active">
                                                                <div id="error">

                                                                </div>
                                                                <div class="row m-b-lg">
                                                                    <div class="col-lg-4 text-center">
                                                                        <h2>
                                                                            <%= data.discount.code %>
                                                                        </h2>
                                                                    </div>


                                                                </div>
                                                                <div class="client-detail">
                                                                    <div class="">

                                                                        <ul class="list-group clear-list">
                                                                            <li class="list-group-item fist-item">
                                                                                <strong>Discount:</strong>
                                                                                <%= data.discount.price %>
                                                                                    <% if (data.discount.type == 'fixed') { %>
                                                                                        $
                                                                                        <% } else {%>
                                                                                            %
                                                                                            <% } %>
                                                                            </li>
                                                                            <% if (data.discount.user) { %>
                                                                                <li class="list-group-item fist-item">
                                                                                    <strong>User:</strong>
                                                                                    <%= data.discount.userName %>
                                                                                </li>
                                                                                <% } %>
                                                                                    <% if (data.discount.product) { %>
                                                                                        <li class="list-group-item fist-item">
                                                                                            <strong>Product:</strong>
                                                                                            <%= data.discount.productName %>
                                                                                        </li>
                                                                                        <% } %>
                                                                                            <% if (data.discount.maxUse) { %>
                                                                                                <li class="list-group-item fist-item">
                                                                                                    <strong>Max. of use:</strong>
                                                                                                    <%= data.discount.maxUse %>
                                                                                                </li>
                                                                                                <% } %>
                                                                                                    <% if (data.discount.nbrUse >= 0) { %>
                                                                                                        <li class="list-group-item fist-item">
                                                                                                            <strong>Used:</strong>
                                                                                                            <%= data.discount.nbrUse %>
                                                                                                        </li>
                                                                                                        <% } %>
                                                                                                            <% if (data.discount.startTime) { %>
                                                                                                                <li class="list-group-item fist-item">
                                                                                                                    <strong>Starts:</strong>
                                                                                                                    <%= data.discount.sstartTime %>
                                                                                                                </li>
                                                                                                                <% } %>
                                                                                                                    <% if (data.discount.deadline) { %>
                                                                                                                        <li class="list-group-item fist-item">
                                                                                                                            <strong>Dead line:</strong>
                                                                                                                            <%= data.discount.sdeadline %>
                                                                                                                        </li>
                                                                                                                        <% } %>
                                                                        </ul>

                                                                        <div class="row">
                                                                            <div class="col-md-4 col-sm-12"><a href="/admin/coupons?action=editCoupon&discountId=<%= data.discount._id %>" class="btn btn-block btn-primary">Edit</a></div>
                                                                            <div class="col-md-4 col-sm-12"><a data-id="<%= data.discount._id %>" id="deleteCoupon" href="" class="btn btn-block btn-danger">Delete</a></div>
                                                                            <div class="col-md-4 col-sm-12"><a href="/admin/discounts" class="btn btn-block btn-outline btn-danger">Cancel</a></div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <% } %>

                                                                <% if (data && data.action && data.action == 'editCoupon' && data.discountId) { %>
                                                                    <div id="editCoupon" class="tab-pane active">
                                                                        <form role="form" id="editForm">
                                                                            <div class="row m-b-lg">

                                                                                <div class="col-sm-12 text-center">
                                                                                    <h2>Edit Coupon</h2>
                                                                                </div>

                                                                            </div>
                                                                            <div class="client-detail">
                                                                                <div class="">

                                                                                    <div id="error">

                                                                                    </div>

                                                                                    <div class="form-group  row">
                                                                                        <div class="col-md-6 col-sm-12"><label class="col-sm-12 row col-form-label">Code</label><input name="code" id="code" type="text" class="form-control" placeholder="Code" required></div>
                                                                                        <div class="col-md-6 col-sm-12">
                                                                                            <label class="col-sm-12 row col-form-label">Type</label>
                                                                                            <select id="type" class="form-control" name="type" required>
                                                                                                <option value="" selected disabled>Select type</option>
                                                                                                <option value="fixed">Fixed</option>
                                                                                                <option value="percent">Percent</option>
                                                                                            </select>
                                                                                        </div>
                                                                                    </div>

                                                                                    <div class="form-group  row">
                                                                                        <div class="col-sm-12"><label class="col-sm-12 row col-form-label">Price</label><input type="number" name="price" id="price" class="form-control" placeholder="Price" required></div>
                                                                                    </div>

                                                                                    <div class="form-group  row">
                                                                                        <div class="col-sm-12">
                                                                                            <label class="col-sm-12 row col-form-label">User</label>
                                                                                            <select id="user" class="form-control" name="user">
                                                                                                <option value="" selected disabled>Select user</option>
                                                                                                <% if (data && data.users && data.users.length) { %>
                                                                                                    <% for(var i=0; i < data.users.length; i++) {%>
                                                                                                        <option value="<%= data.users[i]._id %>">
                                                                                                            <% if (data && data.users && data.users[i].profile && data.users[i].profile.name) { %>
                                                                                                                <%= data.users[i].profile.name %>
                                                                                                            <% } else { %>
                                                                                                                <%= data.users[i].username %>
                                                                                                            <% } %>
                                                                                                        </option>
                                                                                                    <% } %>
                                                                                                <% } %>
                                                                                            </select>
                                                                                        </div>
                                                                                    </div>


                                                                                    <div class="form-group  row">
                                                                                        <div class="col-sm-12">
                                                                                            <label class="col-sm-12 row col-form-label">Product</label>
                                                                                            <select id="product" class="form-control" name="product">
                                                                                                <option value="" selected disabled>Select product</option>
                                                                                            </select>
                                                                                        </div>
                                                                                    </div>

                                                                                    <div class="form-group  row">
                                                                                        <div class="col-sm-12"><label class="col-sm-12 row col-form-label">Max. of use</label><input type="number" id="maxUse" name="maxUse" max="999" class="form-control" min="1" placeholder="Max. of use"
                                                                                                required></div>
                                                                                    </div>

                                                                                    <div class="form-group">
                                                                                        <label class="font-normal">Starts</label>
                                                                                        <div class="input-group date">
                                                                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="startTime" data-mask="99/99/9999" type="text" class="form-control">
                                                                                        </div>
                                                                                    </div>

                                                                                    <div class="form-group">
                                                                                        <label class="font-normal">Ends</label>
                                                                                        <div class="input-group date">
                                                                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="deadline" data-mask="99/99/9999" type="text" class="form-control">
                                                                                        </div>
                                                                                    </div>

                                                                                    <div class="form-group  row">
                                                                                        <div class="col-md-6 col-sm-12"><button type="submit" id="saveCoupon" class="btn btn-block btn-primary">Save</button></div>
                                                                                        <div class="col-md-6 col-sm-12"><a href="/admin/coupons" id="cancelCoupon" class="btn btn-block btn-outline btn-danger">Cancel</a>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%- include('../footer'); %>

            </div>
    </div>



    <!-- Mainly scripts -->
    <script src="/assets/js/jquery-3.1.1.min.js"></script>
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.js"></script>
    <script src="/assets/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/assets/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>


    <script src="/assets/js/plugins/dataTables/datatables.min.js"></script>
    <script src="/assets/js/plugins/dataTables/dataTables.bootstrap4.min.js"></script>
    <script src="/assets/js/plugins/iCheck/icheck.min.js"></script>

    <!-- Jasny -->
    <script src="/assets/js/plugins/jasny/jasny-bootstrap.min.js"></script>
    <script src="/assets/js/jquery.cookie.js"></script>

    <!-- Switchery -->
    <script src="/assets/js/plugins/switchery/switchery.js"></script>

    <script src="/assets/js/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- Date range use moment.js same as full calendar plugin -->
    <script src="/assets/js/plugins/fullcalendar/moment.min.js"></script>

    <!-- Jquery Validate -->
    <script src="/assets/js/plugins/validate/jquery.validate.min.js"></script>
    <script src="/assets/js/plugins/sweetalert/sweetalert.min.js"></script>
    <!-- Custom and plugin javascript -->
    <script src="/assets/js/inspinia.js"></script>
    <script src="/assets/js/plugins/pace/pace.min.js"></script>
    <script src="/assets/js/admin/discounts.js"></script>
    <script src="/assets/js/admin/logout.js"></script>
    <script src="/assets/js/commun.js"></script>

</body>

</html>